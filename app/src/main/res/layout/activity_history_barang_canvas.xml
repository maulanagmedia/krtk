<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityInfoStok.HistoryBarangCanvas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/default_small_padding2"
        android:layout_marginRight="@dimen/default_small_padding2"
        android:layout_marginLeft="@dimen/default_small_padding2"
        android:id="@+id/ll_tanggal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:id="@+id/til_tanggal_awal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dari"
                android:editable="false"
                android:inputType="none"
                android:id="@+id/edt_awal"
                style="@style/CustomDate"
                android:textSize="@dimen/text_date_small"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:id="@+id/til_tanggal_akhir">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sampai"
                android:editable="false"
                android:inputType="none"
                android:id="@+id/edt_akhir"
                style="@style/CustomDate"
                android:textSize="@dimen/text_date_small"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_show"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:padding="@dimen/default_small_padding"
            android:background="@drawable/background_custom_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tampil"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:id="@+id/tv_save"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toTopOf="@id/ll_footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="1dp"
        app:layout_constraintTop_toBottomOf="@id/ll_tanggal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_title"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/default_small_padding1"
                android:id="@+id/tv_item_1"
                android:textSize="@dimen/default_text_title_size"
                android:ellipsize="none"
                android:text="Keterangan"
                android:scrollHorizontally="false"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/default_small_padding1"
                android:id="@+id/tv_item_2"
                android:ellipsize="none"
                android:text="Stok"
                android:scrollHorizontally="false"
                android:textSize="@dimen/default_text_title_size"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_history"
            android:layout_below="@id/ll_title"
            android:clickable="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/ll_container"
        app:layout_constraintTop_toBottomOf="@id/ll_tanggal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_footer"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pb_loading" />

        <Button
            android:text="Data not load, tap to refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_refresh"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_small_padding"
        android:paddingBottom="@dimen/default_small_padding"
        android:visibility="gone"
        android:id="@+id/ll_footer"
        android:orientation="vertical"
        android:background="@color/color_grey3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/default_small_padding"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_total"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/default_small_padding1"
            android:text="0"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>