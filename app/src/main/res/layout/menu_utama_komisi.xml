<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="gmedia.net.id.kartikaelektrik.navMenuUtama.MenuUtamaKomisi"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:id="@+id/ll_header"
            android:weightSum="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/til_jenis_pembayaran">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jenis Pembayaran"
                    android:editable="false"
                    android:inputType="none"
                    android:id="@+id/edt_jenis_pembayaran"
                    style="@style/CustomSpinner"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_transparent"
                android:paddingTop="@dimen/default_small_padding1"
                android:id="@+id/til_tanggal_awal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Dari"
                    android:editable="false"
                    android:inputType="none"
                    android:id="@+id/edt_tanggal_awal"
                    style="@style/CustomDate"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_transparent"
                android:paddingTop="@dimen/default_small_padding1"
                android:id="@+id/til_tanggal_akhir">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Sampai"
                    android:editable="false"
                    android:inputType="none"
                    android:id="@+id/edt_tanggal_akhir"
                    style="@style/CustomDate"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="1">

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_margin="@dimen/icon_size"
                    android:src="@mipmap/ic_money"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/padding_right_text">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis Tanggal" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sp_jenis_tanggal"
                        android:entries="@array/jenis_tanggal_array"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/default_small_padding1"
                android:paddingBottom="@dimen/default_small_padding1"
                android:paddingLeft="@dimen/default_small_padding"
                android:paddingRight="@dimen/default_small_padding"
                android:gravity="center_vertical|right">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tampilkan Komisi"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/default_small_padding1"
                    android:background="@drawable/btn_white"
                    android:drawableRight="@mipmap/ic_next_black"
                    android:id="@+id/btn_tampilkan"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
