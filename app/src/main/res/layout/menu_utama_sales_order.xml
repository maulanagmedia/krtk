<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="gmedia.net.id.kartikaelektrik.navMenuUtama.MenuUtamaSalesOrder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="@color/white"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_small_padding"
        android:paddingBottom="@dimen/default_small_padding"
        android:id="@+id/ll_footer"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/color_grey3"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/default_small_padding"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_total"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/default_small_padding1"
            android:text="0"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:id="@+id/ll_header"
        android:paddingBottom="@dimen/default_small_padding"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/autocomplete_SalesOrder"
                android:hint="No SO / Nama Pelanggan"
                style="@style/CustomAutoComplete1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/white_transparent"
                android:elevation="1dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/default_small_padding2"
        android:layout_marginRight="@dimen/default_small_padding2"
        android:layout_marginLeft="@dimen/default_small_padding2"
        android:layout_below="@id/ll_header"
        android:id="@+id/ll_tanggal"
        android:weightSum="1">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:id="@+id/til_tanggal_awal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dari"
                android:editable="false"
                android:inputType="none"
                android:id="@+id/edt_awal"
                style="@style/CustomDate"
                android:textSize="@dimen/text_date_small"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:id="@+id/til_tanggal_akhir">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sampai"
                android:editable="false"
                android:inputType="none"
                android:id="@+id/edt_akhir"
                style="@style/CustomDate"
                android:textSize="@dimen/text_date_small"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_show"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:padding="@dimen/default_small_padding"
            android:background="@drawable/background_custom_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tampil"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:id="@+id/tv_save"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_tanggal"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/ll_load_so"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pb_load_so" />

        <Button
            android:text="Data not load, tap to refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_refresh_so"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="?attr/colorPrimary" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_load_so"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:id="@+id/lv_1_order_salesOrder"
        android:layout_above="@id/ll_footer"
        android:clickable="true" />

</RelativeLayout>
