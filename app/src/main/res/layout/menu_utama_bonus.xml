<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="gmedia.net.id.kartikaelektrik.navMenuUtama.MenuUtamaBonus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/til_tanggal_awal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Mulai"
                android:editable="false"
                android:inputType="none"
                android:id="@+id/edt_tanggal_awal"
                style="@style/CustomDate"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/til_tanggal_akhir">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Akhir"
                android:editable="false"
                android:inputType="none"
                android:id="@+id/edt_tanggal_akhir"
                style="@style/CustomDate"/>

        </android.support.design.widget.TextInputLayout>

        <include
            layout="@layout/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></include>
    </LinearLayout>
</RelativeLayout>
