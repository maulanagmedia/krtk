<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityPengeluaran.DetailPengeluaran">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_save">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_default"
            android:paddingBottom="@dimen/margin_default">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til_tanggal"
                android:textColorHint="@color/black">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal"
                    android:editable="false"
                    android:inputType="none"
                    android:background="@android:color/transparent"
                    android:id="@+id/edt_tanggal"
                    style="@style/CustomDate"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:layout_marginTop="@dimen/margin_default"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:text=""
                android:id="@+id/edt_keterangan"
                android:padding="@dimen/default_small_padding1"
                android:gravity="top"
                android:background="@drawable/bg_default"
                android:layout_marginTop="@dimen/default_small_padding1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_default"
                android:text="Jenis Biaya" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_default"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_jenis"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nominal"
                android:layout_marginTop="@dimen/margin_default"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="number"
                android:imeOptions="actionDone"
                android:id="@+id/edt_nominal"
                android:padding="@dimen/default_small_padding1"
                android:gravity="top"
                android:background="@drawable/bg_default"
                android:layout_marginTop="@dimen/default_small_padding1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gambar (bisa lebih dari satu)"
                android:layout_marginTop="@dimen/margin_default"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="@dimen/default_small_padding"
                    android:id="@+id/rv_photo"></android.support.v7.widget.RecyclerView>

                <cz.intik.overflowindicator.OverflowPagerIndicator
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:id="@+id/opi_photo"
                    android:layout_marginTop="140dp"></cz.intik.overflowindicator.OverflowPagerIndicator>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/default_small_padding1">

                    <ImageButton
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@mipmap/ic_photo"
                        android:scaleType="centerInside"
                        android:id="@+id/ib_photo"
                        android:background="?attr/selectableItemBackground"
                        android:padding="@dimen/default_small_padding1"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rv_photo"
                    android:text="Geser untuk melihat gambar lainnya"
                    android:layout_marginTop="@dimen/default_small_padding"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/pb_loading"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save"
        android:textColor="@color/white"
        android:text="Simpan"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_normal"/>

</RelativeLayout>