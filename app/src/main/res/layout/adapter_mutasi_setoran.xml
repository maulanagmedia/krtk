<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/default_small_padding"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/default_small_padding2"
        android:layout_marginBottom="@dimen/default_small_padding2"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_1"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:padding="@dimen/default_small_padding2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_line"
                android:background="@color/white"/>

            <TextView
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:padding="@dimen/default_small_padding2"
                android:layout_width="match_parent"
                android:text="Sumber"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_item_2"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:paddingRight="@dimen/default_small_padding1"
                android:paddingLeft="@dimen/default_small_padding1"
                android:paddingBottom="@dimen/default_small_padding1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:padding="@dimen/default_small_padding2"
                android:layout_width="match_parent"
                android:text="Tujuan"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_item_3"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:paddingRight="@dimen/default_small_padding1"
                android:paddingLeft="@dimen/default_small_padding1"
                android:paddingBottom="@dimen/default_small_padding1"
                android:paddingTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_line"
                android:background="@color/white"/>

            <TextView
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:padding="@dimen/default_small_padding2"
                android:layout_width="match_parent"
                android:text="Total"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_item_4"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:paddingRight="@dimen/default_small_padding1"
                android:paddingLeft="@dimen/default_small_padding1"
                android:paddingBottom="@dimen/default_small_padding1"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:id="@+id/iv_delete"
            android:background="?attr/selectableItemBackground"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_clear"
            android:scaleType="fitCenter"/>

    </LinearLayout>

</LinearLayout>