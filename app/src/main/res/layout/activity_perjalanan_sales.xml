<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_header"
        android:padding="@dimen/default_small_padding"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tv_nama"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/til_tanggal"
            android:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/default_small_padding2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal"
                android:textColorHint="@color/white"
                android:editable="false"
                android:inputType="none"
                android:text=""
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:id="@+id/edt_tanggal"
                style="@style/CustomDate"
                android:drawableRight="@mipmap/ic_date_white"
                android:textSize="@dimen/text_date_small"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:layout_below="@id/ll_header"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuAdminPerjalananSales.PerjalananSales" />
</RelativeLayout>
