<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/default_small_padding1"
    android:paddingRight="@dimen/default_small_padding1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="#fafafa"
        android:layout_marginTop="@dimen/default_small_padding2"
        android:layout_marginBottom="@dimen/default_small_padding2"
        android:layout_marginLeft="@dimen/default_small_padding1"
        android:layout_marginRight="@dimen/default_small_padding1"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_default">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_profile"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:id="@+id/iv_profile"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_profile"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding_default">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="00 00 00"
                        android:id="@+id/tv_time"
                        android:textSize="@dimen/padding_dex"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:id="@+id/tv_nama"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginRight="@dimen/default_small_padding1"
                        android:layout_toLeftOf="@id/tv_time"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_tiny">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_chat"
                        android:id="@+id/iv_icon"
                        android:paddingTop="3dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/tv_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/default_small_padding2"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@id/iv_icon"
                        android:ellipsize="end"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="Deskripsi"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>