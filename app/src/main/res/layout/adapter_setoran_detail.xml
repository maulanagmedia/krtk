<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_1"
                android:textSize="18sp"
                android:paddingTop="@dimen/default_small_padding"
                android:paddingLeft="@dimen/default_small_padding"
                android:paddingRight="@dimen/default_small_padding"
                android:paddingBottom="@dimen/default_small_padding2"
                android:textStyle="bold"
                android:text=""
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_red_bg"/>

            <TextView
                android:id="@+id/tv_item_2"
                android:textSize="14sp"
                android:paddingLeft="@dimen/default_small_padding"
                android:paddingRight="@dimen/default_small_padding"
                android:paddingBottom="@dimen/default_small_padding"
                android:text=""
                android:textColor="@color/white"
                android:background="@color/color_red_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_small_padding1"
                android:background="@color/color_grey"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_small_padding1"
                        android:text="Tanggal"
                        android:textSize="@dimen/default_text_subtitle_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/default_small_padding1"
                        android:paddingLeft="@dimen/default_small_padding1"
                        android:paddingRight="@dimen/default_small_padding1"
                        android:id="@+id/tv_item_3"
                        android:textSize="@dimen/default_text_title_size"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/default_line"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/default_small_padding1"
                    android:layout_marginTop="@dimen/default_small_padding1"
                    android:background="@color/color_grey"></LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_small_padding1"
                        android:text="Total"
                        android:id="@+id/tv_title_3"
                        android:textSize="@dimen/default_text_subtitle_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="@dimen/default_small_padding1"
                        android:paddingLeft="@dimen/default_small_padding1"
                        android:paddingRight="@dimen/default_small_padding1"
                        android:id="@+id/tv_item_4"
                        android:text=""
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:textSize="@dimen/default_text_title_size"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_small_padding1"
                android:background="@color/color_grey"
                android:layout_marginBottom="@dimen/default_small_padding1"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>