<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:id="@+id/ll_header"
            android:paddingBottom="@dimen/default_small_padding"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <AutoCompleteTextView
                    android:id="@+id/actv_nama_pelanggan"
                    android:hint="Nama Pelanggan"
                    style="@style/CustomAutoComplete1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/white_transparent"
                    android:elevation="1dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/default_small_padding"
            android:paddingBottom="@dimen/default_small_padding"
            android:id="@+id/ll_footer"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@color/color_grey3"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:text="Customer"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/default_small_padding"
                    android:layout_marginRight="@dimen/default_small_padding2"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Denda"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/default_small_padding2"
                    android:layout_marginRight="@dimen/default_small_padding2"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:text="Total Hapus Denda"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/default_small_padding2"
                    android:layout_marginRight="@dimen/default_small_padding"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_customer"
                    android:textSize="@dimen/text_total"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/default_small_padding1"
                    android:text="0"
                    android:layout_marginLeft="@dimen/default_small_padding"
                    android:layout_marginRight="@dimen/default_small_padding2"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_denda"
                    android:textSize="@dimen/text_total"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/default_small_padding1"
                    android:text="0"
                    android:layout_marginLeft="@dimen/default_small_padding2"
                    android:layout_marginRight="@dimen/default_small_padding2"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_hapus_denda"
                    android:textSize="@dimen/text_total"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/default_small_padding1"
                    android:text="0"
                    android:layout_marginLeft="@dimen/default_small_padding2"
                    android:layout_marginRight="@dimen/default_small_padding"
                    android:gravity="center_vertical|right"/>
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_load_customer"
            android:layout_above="@id/ll_footer"
            android:layout_centerHorizontal="true"
            android:divider="@null"
            android:paddingTop="@dimen/default_small_padding1"
            android:paddingBottom="@dimen/default_small_padding1"
            android:id="@+id/lv_list_pelanggan"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/ll_header"
            android:gravity="center"
            android:id="@+id/ll_load_customer"
            android:visibility="gone">

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pb_load_customer" />

            <Button
                android:text="Data not load, tap to refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_refresh"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="?attr/colorPrimary" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>