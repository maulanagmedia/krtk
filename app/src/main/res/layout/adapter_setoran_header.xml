<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_1"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textSize="@dimen/default_text_title_size_small"
                android:textColor="@android:color/white"
                android:padding="@dimen/default_small_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_item_2"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textSize="@dimen/default_text_title_size_big"
                android:textColor="@android:color/white"
                android:padding="@dimen/default_small_padding"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:id="@+id/iv_state"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_next_white"
            android:scaleType="fitCenter"/>

    </LinearLayout>

</LinearLayout>